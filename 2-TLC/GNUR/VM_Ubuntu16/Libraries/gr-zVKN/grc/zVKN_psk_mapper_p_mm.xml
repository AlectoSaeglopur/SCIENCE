<?xml version="1.0"?>
<block>
  <name>PSK Mapper [P-MM]</name>
  <key>zVKN_psk_mapper_p_mm</key>
  <category>zVKN</category>
  <import>import zVKN</import>
  <make>zVKN.psk_mapper_p_mm($Order, $Offset, $Rotation)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Order</name>
    <key>Order</key>
    <type>int</type>
  </param>

  <param>
    <name>Offset [deg]</name>
    <key>Offset</key>
    <type>float</type>
  </param>

  <param>
    <name>Rotation</name>
    <key>Rotation</key>
    <type>bool</type>
    <option>
      <name>clockwise</name>
      <key>False</key>
    </option>
    <option>
      <name>counterclockwise</name>
      <key>True</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>port_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>port_out</name>
    <type>message</type>
  </source>
</block>
