<?xml version="1.0"?>
<block>
  <name>AGC [P-CC]</name>
  <key>zVKN_agc_p_cc</key>
  <category>zVKN</category>
  <import>import zVKN</import>
  <make>zVKN.agc_p_cc($OfsRef, $AmpRef, $WinSz, $OfsGain, $AmpGain)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>DC offset reference [V]</name>
    <key>OfsRef</key>
    <type>complex</type>
  </param>

  <param>
    <name>Amplitude reference [V]</name>
    <key>AmpRef</key>
    <type>complex</type>
  </param>

  <param>
    <name>Window size [Sa]</name>
    <key>WinSz</key>
    <type>int</type>
  </param>

  <param>
    <name>DC offset loop gain</name>
    <key>OfsGain</key>
    <type>float</type>
  </param>

  <param>
    <name>Amplitude loop gain</name>
    <key>AmpGain</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
