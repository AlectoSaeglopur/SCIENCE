<?xml version="1.0"?>
<block>
  <name>Protocol Header TX</name>
  <key>zVKN_prot_header_tx_p_mm</key>
  <category>zVKN</category>
  <import>import zVKN</import>
  <make>zVKN.prot_header_tx_p_mm($PrbSz, $LenSz, $Dummy, $SwVal, $Order)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Preamble size [B]</name>
    <key>PrbSz</key>
    <type>int</type>
  </param>

  <param>
    <name>Length-field size [B]</name>
    <key>LenSz</key>
    <type>int</type>
  </param>

  <param>
    <name>Tail dummy bytes</name>
    <key>Dummy</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Sync Word</name>
    <key>SwVal</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Order</name>
    <key>Order</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>port_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>port_out</name>
    <type>message</type>
  </source>
</block>
